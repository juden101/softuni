@using LaptopStore.Models
@model IEnumerable<Laptop>
<div>
    @{for (int i = 0; i < Model.Count(); i++)
    {
        if (i % 3 == 0)
        {
            @:<div class="row">
        }

        var laptop = Model.Skip(i - 1).FirstOrDefault();
        <div class="col-md-4">
            <h2>@(laptop.Brand) @(laptop.Model)</h2>
            <p>$@string.Format("{0:F2}", laptop.Price)</p>
            <img src="@laptop.PictureUrl" alt="" />
        </div>
        if (i % 3 == 2)
        {
            @:</div>
        }
    }}
</div>
