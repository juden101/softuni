@model Twitter.Web.Models.ViewModels.UserViewModel
@{
    var user = Model;
    user.AvatarUrl = user.AvatarUrl == null ? "http://www.sourcecoi.com/sites/default/files/team/defaultpic.png" : user.AvatarUrl;
}

<div class="row">
    <div class="col-md-12">
        <div class="tweet-wrapper">
            <div class="media-left media-top">
                <a href="#">
                    <img class="media-object" src="@user.AvatarUrl" style="width: 4rem; height: 4rem; border-radius: 15%" alt="">
                </a>
            </div>
            <div class="media-body">
                <h4 class="media-heading">@user.FullName @user.Email</h4>
                <button type="button" class="btn btn-default" aria-label="Right Align" style="float: right">
                    <span>Follow</span>
                </button>
            </div>
        </div>
    </div>
</div>