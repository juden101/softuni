@using Microsoft.AspNet.Identity
@using Twitter.Models;
@model IQueryable<ApplicationUser>

<div>
    @{
        for (int i = 1; i <= Model.Count(); i++)
        {
            var loggedUserId = User.Identity.GetUserId();
            var user = Model.OrderBy(m => m.FullName).Skip(i - 1).FirstOrDefault();

            if (i + 3 % 4 == 0)
            {
                @:<div class="row">
            }

            if (user.Id != loggedUserId)
            {
                <div class="col-md-4">
                    <div class="tweet-wrapper">
                        <div class="media-left media-top">
                            <a href="#">
                                @{ 
                                    string userAvatar = user.AvatarUrl == null ? "http://www.sourcecoi.com/sites/default/files/team/defaultpic.png" : user.AvatarUrl;
                                }
                                <img class="media-object" src="@userAvatar" style="width: 4rem; height: 4rem; border-radius: 15%" alt="">
                            </a>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">@user.FullName @user.Email</h4>
                            <button type="button" class="btn btn-default" aria-label="Right Align" style="float: right">
                                <span>Follow</span>
                            </button>
                        </div>
                    </div>
                </div>
                if (i + 3 % 4 == 2)
                {
                    @:</div>
                }
            }
        }
    }
</div>