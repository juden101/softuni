@model Snippy.Web.Models.SnippetPageViewModel

@{
    ViewBag.Title = "All snippets";
}

<h2>All snippets</h2>

<div class="row">
    <div class="col-md-4">
        @Html.DisplayFor(m => @Model.Snippets)
    </div>
</div>

<ul class="pagination">
    @{
        if (Model.CurrentPage - 1 > 0)
        {
            <li>@Html.ActionLink("<<", "Index", "Snippets", new { page = Model.CurrentPage - 1 }, null)</li>
        }
        else
        {
            <li>@Html.ActionLink("<<", "Index", "Snippets", new { page = 1 }, null)</li>
        }

        for (int p = 0; p < Model.PageCount; p++)
        {
            string pageNum = (p + 1).ToString();
            string activeClass = Model.CurrentPage - 1 == p ? "active" : "";
            <li class="@activeClass">@Html.ActionLink(pageNum, "Index", "Snippets", new { page = p + 1 }, null)</li>
        }

        if (Model.CurrentPage + 1 <= Model.PageCount)
        {
            <li>@Html.ActionLink(">>", "Index", "Snippets", new { page = Model.CurrentPage + 1 }, null)</li>
        }
        else
        {
            <li>@Html.ActionLink(">>", "Index", "Snippets", new { page = Model.PageCount }, null)</li>
        }
    }
</ul>