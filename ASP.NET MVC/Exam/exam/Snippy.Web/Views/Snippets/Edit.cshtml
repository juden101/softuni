@model Snippy.Web.Models.NewSnippetPageViewModel

@{
    ViewBag.Title = "Edit snippet";
}

<h2>Edit snippet</h2>

@using (@Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group row">
        <div class="col-md-1">
            @Html.LabelFor(m => m.Snippet.Title)
        </div>
        <div class="col-md-11">
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Snippet.Title)</p>
            @Html.EditorFor(m => m.Snippet.Title)
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-1">
            @Html.LabelFor(m => m.Snippet.Description)
        </div>
        <div class="col-md-11">
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Snippet.Description)</p>
            @Html.TextAreaFor(m => m.Snippet.Description)
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-1">
            @Html.LabelFor(m => m.Snippet.Code)
        </div>
        <div class="col-md-11">
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Snippet.Code)</p>
            @Html.TextAreaFor(m => m.Snippet.Code)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-1">
            @Html.LabelFor(m => m.Snippet.Language)
        </div>
        <div class="col-md-11">
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Snippet.Language)</p>
            @Html.DropDownListFor(m => m.Snippet.Language, Model.Languages)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-1">
            @Html.LabelFor(m => m.Snippet.Labels)
        </div>
        <div class="col-md-11">
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Snippet.Labels)</p>
            @Html.EditorFor(m => m.Snippet.Labels)
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-12">
            @Html.Hidden("Id", Model.Snippet.Id)
            <input type="submit" class="btn btn-success" value="Edit" />
        </div>
    </div>
}